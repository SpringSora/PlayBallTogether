    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/playground_layout"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="@string/date_ball_num"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/dateball_num_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="15dp"
            android:inputType="number"
            />
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/dateball_set_playground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            >
            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_ball_playground"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_ball_unplayground"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:checked="true"
                />

        </RadioGroup>

