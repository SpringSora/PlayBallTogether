<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/modify_nickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view1"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/userinfo_nickname"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view1"
            android:id="@+id/user_info_nickname2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />

    <RelativeLayout
        android:id="@+id/modify_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view2"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/telphone"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view2"
            android:id="@+id/user_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />

    <RelativeLayout
        android:id="@+id/modify_pw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view3"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/password"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view3"
            android:id="@+id/user_info_pw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:text="登陆密码"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />
    <RelativeLayout
        android:id="@+id/modify_sex"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view4"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/sex"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view4"
            android:id="@+id/user_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />

    <RelativeLayout
        android:id="@+id/modify_age"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view5"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/age"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view5"
            android:id="@+id/user_info_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />

    <RelativeLayout
        android:id="@+id/modify_connect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view6"
            android:layout_width="@dimen/userinfo_mod_pic"
            android:layout_height="@dimen/userinfo_mod_pic"
            android:src="@mipmap/connect"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view6"
            android:id="@+id/user_info_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />
    <RelativeLayout
        android:id="@+id/modify_hobby"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/view7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/hobby"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/view7"
            android:id="@+id/user_info_hobby"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:singleLine="true"
            />
    </RelativeLayout>

</LinearLayout>