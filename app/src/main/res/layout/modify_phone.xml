<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSubtitle"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="6dp"

        >

        <ImageView
            android:id="@+id/modify_phone_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_toRightOf="@id/modify_phone_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:text="@string/modify_phone"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        />

    <com.example.springsora.balltogether.custom_viewpager.MyViewPager
        android:id="@+id/modify_phone_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.example.springsora.balltogether.custom_viewpager.MyViewPager>

</LinearLayout>