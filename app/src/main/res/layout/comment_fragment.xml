<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBody"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSubtitle"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="6dp"
        >
        <ImageView
            android:id="@+id/comment_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlack"
            android:text="@string/comment"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/comment_commit"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/commit"
            android:textColor="@color/colorTitle"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <com.example.springsora.balltogether.custom_view.CircleImageView
                android:id="@+id/comment_ballground_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/preview"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:textColor="@color/colorBlack"
                android:id="@+id/comment_ballground_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:padding="10dp"
                android:id="@+id/comment_edit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/comment_edit"
                android:gravity="top"
                android:hint="@string/comment_hint"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>