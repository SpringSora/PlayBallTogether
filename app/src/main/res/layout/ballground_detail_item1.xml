<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/ballground_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/ballground_point_layout"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            >
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/ballground_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="GroundName"
            android:padding="10dp"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/ballground_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTitle"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorBody"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:src="@mipmap/location"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/ballground_detail_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="location"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.001"
            android:layout_height="match_parent"
            android:background="@color/colorUnChecked"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/ballground_detail_phone"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.08"
            android:scaleType="fitXY"
            android:src="@mipmap/phone"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>


</LinearLayout>