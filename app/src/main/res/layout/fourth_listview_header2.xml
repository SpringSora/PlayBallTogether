<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <RelativeLayout
        android:id="@+id/all_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBody"
            android:text="查看全部订单"
            android:textSize="11dp"
            android:layout_toLeftOf="@+id/forward8"
            />

        <ImageView
            android:id="@+id/forward8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/forward_gray"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorBody"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/person_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/pay_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/pay"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待使用"
                android:textColor="@color/colorIconBlack"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/pay_image"
                />
            <TextView
                android:id="@+id/pay_hint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/person_num_hint"
                android:textColor="@color/colorWarning"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/evaluate_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/evaluate"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:textColor="@color/colorIconBlack"
                android:layout_below="@+id/evaluate_image"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/eveluate_hint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/person_num_hint"
                android:textColor="@color/colorWarning"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/person_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/refund_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/refund"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_below="@+id/refund_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款"
                android:textColor="@color/colorIconBlack"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/refund_hint"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/person_num_hint"
                android:textColor="@color/colorWarning"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>