<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ballground_detail_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        >
        <com.example.springsora.balltogether.custom_view.CircleImageView
            android:id="@+id/comment_userpic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_logo"
            android:layout_centerVertical="true"
            ></com.example.springsora.balltogether.custom_view.CircleImageView>
            <TextView
                android:id="@+id/comment_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/comment_userpic"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/comment_userpic"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_datetime"
            android:layout_alignBottom="@+id/comment_userpic"
            android:layout_toRightOf="@+id/comment_userpic"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:textColor="@color/colorBlack"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorBody"
        />
    <RelativeLayout
        android:id="@+id/view_all_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorWhite"
        >
        <TextView
            android:id="@+id/comment_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTitle"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/forward_gray"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
</LinearLayout>