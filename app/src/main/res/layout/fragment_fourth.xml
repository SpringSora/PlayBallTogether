<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/register_title_main"/>
    <include layout="@layout/register_process_2"  />
    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/register_edit_code"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:hint="@string/input_code_hint"
            android:textColorHint="@color/colorHint"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:inputType="phone"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            />
        <RelativeLayout
            android:id="@+id/register_countdown"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@color/colorLine"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:focusable="false"
            >
            <TextView
                android:id="@+id/countdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"
        />

    <RelativeLayout
        android:id="@+id/register_submit_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorLine"
        android:elevation="3dp"
        android:focusable="false"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_horizontal_margin"
            android:text="@string/submit_code"
            android:gravity="center"
            />

    </RelativeLayout>

</LinearLayout>