<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/result_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorWhite"
        >
        <com.example.springsora.balltogether.custom_view.CircleImageView
            android:id="@+id/result_user_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_logo"
            />

            <TextView
                android:layout_toRightOf="@+id/result_user_pic"
                android:id="@+id/result_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="1123"
                android:singleLine="true"
                android:textSize="18dp"
                />
            <TextView
                android:layout_toRightOf="@+id/result_user_pic"
                android:id="@+id/result_user_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:text="123"
                />
            <TextView
                android:id="@+id/text_sex"
                android:layout_toRightOf="@+id/result_user_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:layout_alignBottom="@+id/result_user_pic"
                />
        <ImageView
            android:id="@+id/result_user_sex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/text_sex"
            android:src="@mipmap/sex"
            android:layout_alignBottom="@+id/result_user_pic"
            />
    </RelativeLayout>
</LinearLayout>