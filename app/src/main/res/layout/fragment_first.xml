<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/title_main"  android:id="@+id/title_main_include"
        />
    <com.example.springsora.balltogether.custom_viewpager.MyViewPager
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/my_custom_viewpager"
        android:layout_below="@id/title_main_include"
        android:layout_above="@+id/menu_main_include"
        > </com.example.springsora.balltogether.custom_viewpager.MyViewPager>

    <include  layout="@layout/menu_main"
        android:id="@+id/menu_main_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>